                    <h4 class="card-title">
                        Food Nutrition
                    </h4>
                    <p class="card-text">card-text</p>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Learn More", "Index", "Nutrition", new { area = "" }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6 portfolio-item">
            <div class="card h-100">
                <a href="@Url.Action("Index", "Calculator")"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
