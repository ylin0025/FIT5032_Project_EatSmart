            </div>
        </div>

        <!-- /.row -->
        <!-- Call to Action Section -->
        <div class="row mb-4">
            <div class="col-md-8">
                <br />
                <p>If you have a query after reading the information on our website there are a number of ways that you can contact us. Clinck on the contact us button to find more.</p>
            </div>
            <div class="col-md-4">
                <br />
                @Html.ActionLink("Contact Us", "Contact", "Home", new { area = "" }, new { @class = "btn btn-lg btn-secondary btn-block" })
            </div>
        </div>
    </div>
</div>