                    <h4 class="card-title">
                        Nutrition Calculator
                    </h4>
                    <p class="card-text">card-text</p>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Learn More", "Index", "Calculator", new { area = "" }, new { @class = "btn btn-primary" })
                </div>
